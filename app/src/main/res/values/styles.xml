<resources>
    <style name="CircularShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Text.Auth.Header" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">48sp</item>
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>
    <style name="Text.Auth.Description" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:alpha">0.8</item>
    </style>
    <style name="Home_Heading" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">24dp</item>
    </style>
    <style name="Home_Recommended_CardView" parent="Base.CardView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="Home_Recommended_Image">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="Home_Recommended_Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Profile_Info_Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:alpha">0.15</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="Profile_Info_Container">
        <!--<item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>-->
    </style>
    <style name="Profile_Info_Icon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?attr/colorOnPrimaryContainer</item>
    </style>
    <style name="Profile_Info_Details_Container">
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="Profile_Info_Details_Header" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="Profile_Info_Details_Value" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
</resources>